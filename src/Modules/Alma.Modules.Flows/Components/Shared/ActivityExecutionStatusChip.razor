@using Alma.Flows.Core.InstanceExecutions.Enums
@using Alma.Flows.Enums
@using EnumsNET

<MudChip T="string" Variant="Variant.Filled" Color="GetColor()" Size="Size.Small">
    @Status.AsString(EnumFormat.Description)
</MudChip>

@code {
    [Parameter]
    public ActivityExecutionStatus Status { get; set; }

    private Color GetColor()
    {
        return Status switch
        {
            ActivityExecutionStatus.Pending => MudBlazor.Color.Default,
            ActivityExecutionStatus.Waiting => MudBlazor.Color.Warning,
            ActivityExecutionStatus.Ready => MudBlazor.Color.Success,
            ActivityExecutionStatus.Completed => MudBlazor.Color.Primary,
            ActivityExecutionStatus.Failed => MudBlazor.Color.Error,
            _ => MudBlazor.Color.Default
        };
    }
}
