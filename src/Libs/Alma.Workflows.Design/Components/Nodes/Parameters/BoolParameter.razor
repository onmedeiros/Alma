@using Alma.Workflows.Core.Description.Descriptors
@using Alma.Workflows.Extensions
@using MudBlazor
@using Alma.Core.Extensions

<MudSwitch Label="@Parameter.DisplayName" 
           Value="@bool.Parse(Node.GetParameterValue(Parameter.Name).IsNullOrEmpty("false"))"
           ValueChanged="@((bool e) => Node.ChangeParameterValue(Parameter.Name, e.ToString()))"
           Color="Color.Primary"
           Class="mb-2"
           Style="width: max-content;" />

@code {
    [CascadingParameter]
    public ActivityNodeModel Node { get; set; } = null!;

    [Parameter]
    public ParameterDescriptor Parameter { get; set; } = null!;

    [Parameter]
    public bool Disabled { get; set; }
}
